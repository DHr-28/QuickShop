<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidrock.quickshoapapp.SignUp"
    android:background="@drawable/back"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:src="@drawable/registernow"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="10dp"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FF4E2525">

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textColor"
                android:layout_centerVertical="true"
                android:ems="7"
                android:hint="Firstname"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FF4E2525">

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="8"
                android:textColor="@color/textColor"
                android:hint="Lastname"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FF4E2525">

        <EditText
            android:id="@+id/loginemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:hint="Email"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FF4E2525">

        <EditText
            android:id="@+id/loginpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:hint="Password"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>




    <android.support.design.widget.TextInputLayout
            android:id="@+id/Residency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FF4E2525">

        <EditText
            android:id="@+id/residency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor"
            android:hint="Address"
            android:drawableLeft="@drawable/ic_domain_black_24dp"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FF4E2525">

        <EditText
            android:id="@+id/City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:textColor="@color/textColor"
            android:hint="City"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <Button
    android:layout_width="280dp"
    android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Submit"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:background="@drawable/mybotton"
        />
        </LinearLayout>
</ScrollView>


</LinearLayout>